            const text = textarea.value;
            charCount.textContent = `${text.length} caracteres`;

            const words = text.trim().split(/\s+/).filter(word => word.length > 0);
            wordCount.textContent = `${words.length} palavras`;
        });

        function limpar() {
            if (textarea.value && !confirm('Deseja realmente limpar todo o texto?')) {
                return;
            }
            textarea.value = '';
            textarea.dispatchEvent(new Event('input'));
            textarea.focus();
        }

        function copiar() {
            if (!textarea.value) {
                alert('N√£o h√° texto para copiar!');
                return;
            }
            textarea.select();
            document.execCommand('copy');
            alert('Texto copiado para a √°rea de transfer√™ncia!');
        }

        function baixar() {
            if (!textarea.value) {
                alert('N√£o h√° texto para baixar!');
                return;
            }
            const blob = new Blob([textarea.value], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `notas_${new Date().toISOString().slice(0, 10)}.txt`;
            a.click();
            URL.revokeObjectURL(url);
        }

        textarea.focus();
    </script>
